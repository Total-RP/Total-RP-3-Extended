	<Button inherits="TRP3_QuestButtonTemplate" name="TRP3_WorkflowLinkButton" virtual="true">
		<Frames>
			<Frame parentKey="select" inherits="TRP3_DropDownMenuTemplate" enableMouse="true" name="$parentSelect">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeKey="$parent.Name" x="-20" y="-5"/>
				</Anchors>
			</Frame>
		</Frames>
	</Button>

	<Frame name="TRP3_ScriptEditorDelay" hidden="true" inherits="TRP3_EditorEffectTemplate">

		<Size x="400" y="290"/>

		<Frames>

			<Frame parentKey="type" inherits="TRP3_DropDownMenuTemplate" enableMouse="true" name="$parentType">
				<Anchors>
					<Anchor point="TOP" x="-5" y="-65"/>
				</Anchors>
			</Frame>

			<EditBox parentKey="sound" inherits="TRP3_TitledHelpEditBox">
				<Size x="205" y="18"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeKey="$parent.type" x="20" y="-10"/>
				</Anchors>
			</EditBox>

			<EditBox parentKey="text" inherits="TRP3_TitledHelpEditBox">
				<Size x="205" y="18"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeKey="$parent.sound" x="0" y="-20"/>
				</Anchors>
			</EditBox>

			<EditBox parentKey="duration" inherits="TRP3_TitledHelpEditBox">
				<Size x="205" y="18"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeKey="$parent.text" x="0" y="-20"/>
				</Anchors>
			</EditBox>

			<Frame parentKey="interrupt" inherits="TRP3_DropDownMenuTemplate" enableMouse="true" name="$parentInterrupt">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeKey="$parent.duration" x="-20" y="-15"/>
					<Anchor point="RIGHT" x="-35" y="0"/>
				</Anchors>
			</Frame>

		</Frames>

	</Frame>

	<!-- Icon browser  -->
	<Frame name="TRP3_ObjectBrowser" hidden="true" enableMouse="true" inherits="TRP3_BackdropTemplate">
		<KeyValues>
			<KeyValue key="backdropInfo" value="TRP3_BACKDROP_MIXED_ACHIEVEMENT_TOOLTIP_415_24_5555" type="global"/>
		</KeyValues>

		<Size x="550" y="400"/>
		<Anchors>
			<Anchor point="CENTER" x="0" y="0"/>
		</Anchors>

		<Scripts>
			<OnHide>
				self:Hide();
			</OnHide>
		</Scripts>

		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="title" text="[placeholder]" inherits="GameFontNormalLarge">
					<Size x="0" y="10"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="-17"/>
						<Anchor point="TOPRIGHT" x="0" y="-17"/>
					</Anchors>
					<Color b="0.95" r="0.95" g="0.95"/>
				</FontString>
			</Layer>
		</Layers>

		<Frames>

			<Button parentKey="close" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-5" y="-5"/>
				</Anchors>
			</Button>

			<Frame parentKey="content" inherits="TRP3_BackdropTemplate">
				<Size x="0" y="295"/>

				<KeyValues>
					<KeyValue key="backdropInfo" value="TRP3_BACKDROP_MIXED_DIALOG_TOOLTIP_415_24_5555" type="global"/>
				</KeyValues>

				<Anchors>
					<Anchor point="TOP" x="0" y="-35"/>
					<Anchor point="LEFT" x="10" y="0"/>
					<Anchor point="RIGHT" x="-10" y="0"/>
				</Anchors>

				<Frames>
					<Slider parentKey="slider" inherits="OptionsSliderTemplate" name="$parentSlider">
						<Size x="15" y="0"/>
						<Anchors>
							<Anchor point="TOP" x="0" y="-5"/>
							<Anchor point="RIGHT" x="0" y="0"/>
							<Anchor point="BOTTOM" x="0" y="5"/>
						</Anchors>
						<Scripts>
							<OnLoad>
								TRP3_ObjectBrowserSliderText:SetText("");
								TRP3_ObjectBrowserSliderHigh:SetText("");
								TRP3_ObjectBrowserSliderLow:SetText("");
								self:SetMinMaxValues(0, 6);
								self:SetValueStep(1);
								self:SetOrientation("VERTICAL");
							</OnLoad>
						</Scripts>
					</Slider>
				</Frames>
			</Frame>

			<!-- Filter section -->
			<Frame parentKey="filter" inherits="TRP3_BackdropTemplate">
				<Size x="0" y="60"/>
				<KeyValues>
					<KeyValue key="backdropInfo" value="TRP3_BACKDROP_MIXED_DIALOG_TOOLTIP_415_24_5555" type="global"/>
				</KeyValues>
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="10" y="10"/>
					<Anchor point="BOTTOMRIGHT" x="-10" y="10"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString parentKey="total" text="[placeholder total]" inherits="GameFontNormal">
							<Size x="0" y="10"/>
							<Anchors>
								<Anchor point="TOPLEFT" x="0" y="-12"/>
								<Anchor point="TOPRIGHT" x="0" y="-12"/>
							</Anchors>
							<Color b="0.95" r="0.95" g="0.95"/>
						</FontString>
					</Layer>
				</Layers>
				<Frames>

					<EditBox parentKey="box" inherits="TRP3_TitledEditBox">
						<Anchors>
							<Anchor point="BOTTOM" x="0" y="10"/>
						</Anchors>
					</EditBox>

				</Frames>
			</Frame>
		</Frames>
	</Frame>

</Ui>