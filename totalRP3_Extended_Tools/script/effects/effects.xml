				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeKey="$parent.source" x="0" y="-20"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString parentKey="config" inherits="GameFontNormal" justifyH="LEFT" text="[CONFIGURATION]">
