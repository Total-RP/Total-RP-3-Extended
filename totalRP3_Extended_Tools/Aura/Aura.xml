				</Anchors>
			</EditBox>

			<Frame parentKey="method" inherits="TRP3_DropDownMenuTemplate" enableMouse="true" name="$parentMethod">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeKey="$parent.duration" x="-20" y="-10"/>
				</Anchors>
			</Frame>

		</Frames>
	</Frame>

