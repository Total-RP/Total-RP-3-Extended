<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">
	<Include file="InventorySlot.lua"/>

    <Button name="TRP3_InventoryPageSlotTemplate" inherits="TRP3_ContainerSlotTemplate" mixin="TRP3_InventoryPageSlotMixin" virtual="true">
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="bg" file="Interface\PaperDoll\UI-Backpack-EmptySlot">
					<Size x="36" y="36"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="First" inherits="GameFontNormalSmall" justifyV="MIDDLE">
					<Size x="0" y="15"/>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
				<FontString parentKey="Second" inherits="GameFontNormalSmall" justifyV="MIDDLE">
					<Size x="0" y="15"/>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button parentKey="ItemLocator" hidden="true">
				<Size x="20" y="20"/>
				<NormalTexture file="Interface\MINIMAP\PARTYRAIDBLIPS">
					<Size x="16" y="16"/>
					<TexCoords left="0.5" right="0.625" top="0.5" bottom="0.75"/>
				</NormalTexture>
				<HighlightTexture file="Interface\MINIMAP\PARTYRAIDBLIPS">
					<Size x="20" y="20"/>
					<TexCoords left="0.5" right="0.625" top="0.5" bottom="0.75"/>
				</HighlightTexture>
			</Button>
		</Frames>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
	</Button>

</Ui>
