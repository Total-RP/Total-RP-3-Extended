<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">
    <Include file="InventoryItemConfig.lua" />

    <Frame name="TRP3_InventoryItemConfigPanelTemplate" mixin="TRP3_InventoryItemConfigPanelMixin"
        virtual="true" hidden="true">
        <Size x="175" y="200" />
        <Frames>
            <Frame parentKey="Backdrop" inherits="TooltipBorderBackdropTemplate" setAllPoints="true"
                useParentLevel="true">
                <KeyValues>
                    <KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_CREAMY_BROWN"
                        type="global" />
                </KeyValues>
                <Layers>
                    <Layer level="BORDER" textureSubLevel="-3">
                        <Texture parentKey="RightWoodBorder"
                            file="Interface\AddOns\totalRP3\Resources\UI\!ui-frame-wooden-border"
                            vertTile="true">
                            <Size x="22" />
                            <Anchors>
                                <Anchor point="TOPRIGHT" x="-4" y="-4" />
                                <Anchor point="BOTTOMRIGHT" x="-4" y="4" />
                            </Anchors>
                            <Color r="1" g="0.8" b="0.8" />
                            <TexCoords left="0.2265625" right="0.0078125" />
                        </Texture>
                    </Layer>
                    <Layer level="BORDER" textureSubLevel="-2">
                        <Texture parentKey="TopWoodBorder"
                            file="Interface\AddOns\totalRP3\Resources\UI\_ui-frame-wooden-border"
                            horizTile="true">
                            <Size y="22" />
                            <Anchors>
                                <Anchor point="TOPLEFT" x="4" y="-4" />
                                <Anchor point="TOPRIGHT" x="-4" y="-4" />
                            </Anchors>
                            <Color r="1" g="0.8" b="0.8" />
                            <TexCoords top="0.484375" bottom="0.921875" />
                        </Texture>
                        <Texture parentKey="BottomWoodBorder"
                            file="Interface\AddOns\totalRP3\Resources\UI\_ui-frame-wooden-border"
                            horizTile="true">
                            <Size y="22" />
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" x="4" y="4" />
                                <Anchor point="BOTTOMRIGHT" x="-4" y="4" />
                            </Anchors>
                            <Color r="1" g="0.8" b="0.8" />
                            <TexCoords top="0.015625" bottom="0.453125" />
                        </Texture>
                    </Layer>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="Background"
                            file="Interface\AddOns\totalRP3\Resources\UI\ui-frame-neutral-background"
                            horizTile="true" vertTile="true">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="4" y="-4" />
                                <Anchor point="BOTTOMRIGHT" x="-4" y="4" />
                            </Anchors>
                            <Color r="0.6" g="0.6" b="0.6" />
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
            <EditBox parentKey="CameraRotationEditBox" inherits="TRP3_TitledEditBox">
                <Anchors>
                    <Anchor point="TOP" y="-25" />
                </Anchors>
            </EditBox>
            <EditBox parentKey="MarkerXEditBox" inherits="TRP3_TitledEditBox">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.CameraRotationEditBox"
                        relativePoint="BOTTOMLEFT" y="-20" />
                    <Anchor point="TOPRIGHT" relativeKey="$parent.CameraRotationEditBox"
                        relativePoint="BOTTOM" x="-5" y="-20" />
                </Anchors>
            </EditBox>
            <EditBox parentKey="MarkerYEditBox" inherits="TRP3_TitledEditBox">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.CameraRotationEditBox"
                        relativePoint="BOTTOM" x="5" y="-20" />
                    <Anchor point="TOPRIGHT" relativeKey="$parent.CameraRotationEditBox"
                        relativePoint="BOTTOMRIGHT" y="-20" />
                </Anchors>
            </EditBox>
            <EditBox parentKey="AnimEditBox" inherits="TRP3_TitledEditBox">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.MarkerXEditBox"
                        relativePoint="BOTTOMLEFT" y="-10" />
                </Anchors>
            </EditBox>
            <Button parentKey="SaveButton" inherits="TRP3_RedButtonTemplate">
                <Size x="100" y="30" />
                <Anchors>
                    <Anchor point="TOP" relativeKey="$parent.AnimEditBox" relativePoint="BOTTOM"
                        y="-10" />
                </Anchors>
            </Button>
        </Frames>
        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="TitleText" inherits="GameFontWhite">
                    <Anchors>
                        <Anchor point="TOP" y="-4" />
                    </Anchors>
                </FontString>
                <FontString parentKey="MarkerSectionHeader" inherits="GameFontNormalSmall">
                    <Anchors>
                        <Anchor point="TOP" relativeKey="$parent.CameraRotationEditBox"
                            relativePoint="BOTTOM" y="-4" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnUpdate method="OnUpdate" />
        </Scripts>
    </Frame>
</Ui>